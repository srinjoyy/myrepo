# import sys
# print(sys.executable)

df=pd.read_excel(r'C:\Users\HP\Python\Project_F1\ver_ham_laptimes.xlsx')
df.head()

import matplotlib.pyplot as plt

# Filter laps by driver
laps_ver = df[df['Driver'] == 'VER']
laps_ham = df[df['Driver'] == 'HAM']

plt.figure(figsize=(12, 6))

# Plot lap times as lines
plt.plot(laps_ver['LapNumber'], laps_ver['LapTime'], marker='o', label='Verstappen', color='red')
plt.plot(laps_ham['LapNumber'], laps_ham['LapTime'], marker='o', label='Hamilton', color='blue')

plt.xlabel('Lap Number')
plt.ylabel('Lap Time (seconds)')
plt.title('Lap Time Comparison (Line Graph): Verstappen vs Hamilton')
plt.legend()
plt.grid(True)

plt.show()
